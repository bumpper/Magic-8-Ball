{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Magic8Ball",
  "version": "1.0.0",
  "identifier": "center.radius.magic8ball",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "../src",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "deb", "rpm", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser",
        "languages": ["en-US"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    },
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 Radius.Center",
    "category": "Utility",
    "shortDescription": "Magic 8 Ball - Mystical Answer Oracle",
    "longDescription": "Ask any question and shake the Magic 8 Ball for mystical answers! Get instant guidance with 20 classic responses including positive, negative, and neutral predictions. Perfect for decision making and fun."
  },
  "app": {
    "windows": [
      {
        "title": "Magic 8 Ball",
        "width": 800,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 600,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  }
}
